generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id   Int    @id @unique @default(autoincrement())
  slug String @unique

  name        String
  images      String[]
  price       Int
  description String
  info        ProductInfo[]
  modelUrl    String?
  isNew       Boolean?

  quantityLeft Int @default(0)

  category     Category @relation(fields: [categorySlug], references: [slug])
  categorySlug String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductInfo {
  id Int @id @unique @default(autoincrement())

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  title String
  value String
  order Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id   Int    @id @unique @default(autoincrement())
  slug String @unique

  name String

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id Int @id @unique @default(autoincrement())

  login    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Slide {
  id Int @id @unique @default(autoincrement())

  background String
  text       String
  url        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TextField {
  id Int @id @unique @default(autoincrement())

  slug String
  text String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id   Int    @id @unique @default(autoincrement())
  slug String @unique

  name        String
  description String
  modelUrl    String?
  isNew       Boolean?

  order Int @default(autoincrement())

  category     Category @relation(fields: [categorySlug], references: [slug])
  categorySlug String

  items ProductItem[]
  info  ProductInfo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductItem {
  id   Int    @id @unique @default(autoincrement())
  slug String @unique

  images       String[]
  price        Int
  quantityLeft Int      @default(0)

  colorTemperature String?
  color            String?
  dimmable         String?
  scatteringAngle  String?

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductInfo {
  id Int @id @unique @default(autoincrement())

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  title String
  value String
  order Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id   Int    @id @unique @default(autoincrement())
  slug String @unique

  name String

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id Int @id @unique @default(autoincrement())

  login    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Slide {
  id Int @id @unique @default(autoincrement())

  background String
  text       String
  url        String

  device SLIDE_DEVICE @default(DESKTOP)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TextField {
  id Int @id @unique @default(autoincrement())

  slug String
  text String

  richText Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FailedLoginAttempt {
  id Int @id @unique @default(autoincrement())

  ip       String @unique
  attempts Int    @default(0)

  lockUntil DateTime?

  updatedAt DateTime @updatedAt
}

enum SLIDE_DEVICE {
  MOBILE
  DESKTOP
}
